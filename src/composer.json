{
  "name": "Raspberrypi-Oauth",
  "description": "Slim 3 skeleton - authentication - authorization",
  "type": "project",
  "keywords": [
      "slim",
      "api",
      "rest",
      "php"
  ],
  "minimum-stability": "stable",
  "homepage": "https://github.com/tigerwill90/Raspberrypi-Oauth",
  "authors": [
      {
          "name": "Sylvain Muller",
          "email": "sylvain.muller90@gmail.com",
          "homepage": "https://www.sylvainmuller.ch",
          "role": "Developer"
      }
  ],
  "require": {
    "ext-json" : "*",
    "ext-curl" : "*",
    "slim/slim" : "^3.10",
    "vlucas/phpdotenv": "^2.5",
    "web-token/jwt-core": "^1.1",
    "web-token/jwt-checker": "^1.1",
    "web-token/jwt-signature": "^1.1",
    "web-token/jwt-encryption": "^1.1",
    "tcdent/php-restclient": "^0.1.7",
    "ronanguilloux/php-gpio": "^1.0"
  },
  "require-dev" : {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.3.0",
    "phpstan/phpstan": "^0.10.3",
    "squizlabs/php_codesniffer" : "^3.0"
  },
  "autoload": {
      "psr-4": {
        "App\\": "app/"
      }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  }
}
